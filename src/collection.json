{
  "$schema": "./node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "component": {
      "factory": "./lib/component/component.factory#main",
      "description": "Create a iCodeX component.",
      "schema": "./lib/component/schema.json",
      "aliases": ["cmp"]
    },
    "schema2ts": {
      "factory": "./lib/schema2ts/schema2ts.factory#main",
      "description": "Convert JSON schema to TypeScript interface.",
      "schema": "./lib/schema2ts/schema.json",
      "aliases": ["s2t"]
    },
    "openapi-gen": {
      "factory": "./lib/openapi-gen/openapi-gen.factory#main",
      "description": "Generate code from OpenAPI spec.",
      "schema": "./lib/openapi-gen/schema.json",
      "aliases": ["oag"]
    }
  }
}
